PageManager:
    HomePage:
    DataPage:
    SettingsPage:

<HomePage>:
    name: "home"
    GridLayout:
        padding:5
        cols:1

        GridLayout:
            size_hint: 1, 0.15
            cols:2
            Image:
                size: self.texture_size
                source:'img/logo.png'
            Button:
                size_hint: 0.3, 1
                text: 'Войти'

        GridLayout:
            cols:1
            BoxLayout:
                size_hint: 1, 0.1
                Label:
                    background_color: [1,0.1,1,1]
                    font_size: 20
                    text: "ПОКАЗАНИЯ СЧЁТЧИКА"

            GridLayout:
                size_hint: 1, 0.1
                cols:3
                Label:
                    font_size: 20
                    text: '>>>'
                TextInput:
                    font_size: 22
                    multiline: "False"
                Label:
                    font_size: 20
                    text: '<<<'

            BoxLayout:
                size_hint: 1, 0.1
                Label:
                    background_color: [1,0.1,1,1]
                    font_size: 20
                    text: "ВРЕМЯ ЗВУЧАНИЯ"

            GridLayout:
                size_hint: 1, 0.1
                cols:2
                Label:
                    font_size: 20
                    text: 'СТОРОНЫ:'
                Label:
                    font_size: 20
                    text: 'КАССЕТЫ:'
            BoxLayout:
                cols:2
                size_hint: 1, 0.15
                Button:

                Button:

            GridLayout:
                spacing: 20
                cols:1
                Button:
                    text: 'DIGITS\n  GRID'
                    font_size: 50

        BoxLayout:
            size_hint: 1, 0.1
            cols:3
            spacing:10
            Button:
                text:'База данных'
                on_press:
                    app.root.current = 'data'
                    root.manager.transition.direction = 'left'
            Button:
                text:'Настройки'
                on_press:
                    app.root.current = 'settings'
                    root.manager.transition.direction = 'left'
            Button:
                text:'Выход'

<DataPage>:
    name:"data"
    GridLayout:
        cols:1
        GridLayout:
            padding: 5
            size_hint: 1, 0.06
            cols:2
            Button:
                size: self.texture_size
                background_color: [1,0.8,0.5,1]
                size_hint: 0.3, 1
                text: '<<< Назад'
                on_press:
                    app.root.current = 'home'
                    root.manager.transition.direction = 'right'
            Label:
                background_color: 1, 1, 1, 1
                text_size: self.size
                halign: 'right'
                valign: 'middle'
                text: 'БАЗА ДАННЫХ'
                bold: False

        GridLayout:
            rows:2
            Button:
                text: "Ещё база"
            Button:
                text: 'Текущая база данных'

<SettingsPage>:
    name:"settings"
    GridLayout:
        cols:2
        Button:
            text: 'Настройки'
        Button:
            text: 'Назад'
            on_press:
                app.root.current = 'home'
                root.manager.transition.direction = 'right'
