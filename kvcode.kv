            bold: False
            canvas.before:
                Color:
                    rgba: self.background_color
                Rectangle:
                    size: self.size
                    pos: self.pos
        BoxLayout:
            padding: 15
            pos_hint: {"x":0, "top": 0.93}
            size_hint: 1, 0.28
            Image:
                source: 'data/login_3.png'
                id: selected_image
        BoxLayout:
            orientation: 'vertical'
            pos_hint: {"x":0, "top": 0.67}
            size_hint: 1, .5
            FileChooserListView:
                id: file_chooser
                path: root.backup_path
                on_selection: root.selected(file_chooser.selection)
                on_selection: if root.selected(file_chooser.selection): Factory.PopFileUp().open()
        Label:
            id: dir_text
            pos_hint: {"x":0, "top": 0.16}
            size_hint: 1, .07
            text:"ПРОВОДНИК"
            background_color: (75/255, 75/255, 75/255, 1)
            canvas.before:
                Color:
                    rgba: self.background_color
                Rectangle:
                    size: self.size
                    pos: self.pos
        Button:
            id: new_folder
            pos_hint: {"center_x":0.85, "top": 0.07}
            size_hint: 0.25, 0.05
            color: (0,0,0,1)
            background_normal: ''
            background_color:(240/255, 148/255,22/255, 1)
            size: self.texture_size
            text: 'FOLDER'
            text_size: self.size
            font_size: (root.width + root.height) / 65
            halign: 'center'
            valign: 'middle'
            on_release: root.make_app_dir()
        Button:
            id: new_base_save
            pos_hint: {"center_x":0.5, "top": 0.07}
            size_hint: 0.25, 0.05
            color: (0,0,0,1)
            background_normal: ''
            background_color:(240/255, 148/255,22/255, 1)
            size: self.texture_size
            text: 'BACKUP'
            text_size: self.size
            font_size: (root.width + root.height) / 65
            halign: 'center'
            valign: 'middle'
            on_press: root.save_database()
            on_press: file_chooser.path = ''
            on_release: file_chooser.path = root.backup_path
        Button:
            id: clear_folder
            pos_hint: {"center_x":0.15, "top": 0.07}
            size_hint: 0.25, 0.05
            color: (0,0,0,1)
            background_normal: ''
            background_color:(240/255, 148/255,22/255, 1)
            size: self.texture_size
            text: 'CLEAR'
            text_size: self.size
            font_size: (root.width + root.height) / 65
            halign: 'center'
            valign: 'middle'
            on_press: root.clear_folder()
            on_press: file_chooser.path = ''
            on_release: file_chooser.path = root.backup_path






